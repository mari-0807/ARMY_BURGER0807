<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".PaginaIniciarSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ww" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="A R M Y B U R G E R"
                android:textColor="#DC4A1C"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="378dp"
                android:layout_height="80dp"
                android:layout_below="@+id/imageView6"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:hint="Número de telefono o correo Electrónico"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="#A6A1A1"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextTextPassword2"
                android:layout_width="378dp"
                android:layout_height="80dp"
                android:layout_below="@+id/editTextTextEmailAddress"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#A6A1A1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/acceso"
                android:layout_width="378dp"
                android:layout_height="60dp"
                android:layout_below="@+id/editTextTextPassword2"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/naranjo"
                android:gravity="center"
                android:text="acceso"
                android:textSize="18dp" />

            <Button
                android:id="@+id/crearnuevacuenta"
                android:layout_width="378dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/naranjo"
                android:gravity="center"
                android:text="Crear nueva cuenta"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_below="@+id/acceso"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="¿Has olvidado tu contraseña?"
                android:textColor="@color/rojo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:gravity="center"
                android:text="___________ or ___________"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>